<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailEvent">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imv_bckgevent"
        android:layout_width="412dp"
        android:layout_height="191dp"
        android:src="@drawable/bckgevent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pom"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_pom"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="1dp"
        android:text="@string/pom"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/v_detail"
        android:layout_width="412dp"
        android:layout_height="6dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="47dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:text="Detail"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_bckgevent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_panitia"
        android:layout_width="53dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:text="Panitia"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_detail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="251dp" />

    <TextView
        android:id="@+id/tv_agenda"
        android:layout_width="57dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:text="Agenda"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_panitia"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="251dp" />

    <TextView
        android:id="@+id/tv_anggaran"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:text="Anggaran"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_agenda"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="252dp" />

    <TextView
        android:id="@+id/tv_chekclist"
        android:layout_width="66dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:text="Checklist"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_anggaran"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="252dp" />

    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="122dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:text="Detail/Deskripsi"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/v_detail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/tv_deskripsi1"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:text="@string/detail"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/tv_kodeacara"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="Kode Acara"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/et_kodeacara"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:text="Masukkan Kode Acara"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_kodeacara"
        tools:layout_editor_absoluteX="33dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_copy"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:src="@drawable/copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_kodeacara" />

    <TextView
        android:id="@+id/tv_tambahan"
        android:layout_width="196dp"
        android:layout_height="22dp"
        android:text="@string/tambahan"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/et_kodeacara"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp" />

    <TextView
        android:id="@+id/tv_tglacara"
        android:layout_width="105dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="Tanggal Acara"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_tambahan"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/et_tglacara"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:text="1-7 November 2023"
        app:layout_constraintTop_toBottomOf="@+id/tv_tglacara"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp" />

    <ImageView
        android:id="@+id/img_kalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/kalender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tglacara" />

    <TextView
        android:id="@+id/tv_ktgriacara"
        android:layout_width="105dp"
        android:layout_height="22dp"
        android:text="Kategori Acara"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_tglacara"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/et_ktgriacara"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:text="Sport"
        app:layout_constraintTop_toBottomOf="@+id/tv_ktgriacara"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/tv_copy"
        android:layout_width="94dp"
        android:layout_height="23dp"
        android:text="Detail Agenda"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/et_ktgriacara"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <EditText
        android:id="@+id/et_detailacara"
        android:layout_width="348dp"
        android:layout_height="41dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_copy"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

</androidx.constraintlayout.widget.ConstraintLayout>