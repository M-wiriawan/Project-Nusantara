<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/img_logowarna"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/entifywarna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_notif"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/notifikasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_bgprofil"
        android:layout_width="399dp"
        android:layout_height="181dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/bgprofil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_profil"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_bgprofil"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="48dp"
        android:text="Hana Mardini Putri"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/img_bgprofil"
        app:layout_constraintTop_toBottomOf="@+id/img_bgprofil" />

    <TextView
        android:id="@+id/tv_namadvs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Divisi media"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_nama"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_pengaturanprofil"
        android:layout_width="157dp"
        android:layout_height="29dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="Pengaturan Profile"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_namadvs" />

    <EditText
        android:id="@+id/et_ubhprofil"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_edit_text"
        android:text="Ubah Profile"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_pengaturanprofil"
        app:layout_constraintTop_toBottomOf="@+id/tv_pengaturanprofil" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pengaturanprofil" />

    <EditText
        android:id="@+id/et_ubhkatasndi"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edit_text"
        android:text="Ubah Kata Sandi"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/et_ubhprofil"
        app:layout_constraintTop_toBottomOf="@+id/et_ubhprofil" />

    <ImageView
        android:id="@+id/img_next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:src="@drawable/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ubhprofil" />

    <EditText
        android:id="@+id/et_infoapk"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edit_text"
        android:text="Informasi Aplikasi"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/et_ubhkatasndi"
        app:layout_constraintTop_toBottomOf="@+id/et_ubhkatasndi" />

    <ImageView
        android:id="@+id/img_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ubhkatasndi" />

    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/blue"
        android:text="Keluar"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_infoapk" />

</androidx.constraintlayout.widget.ConstraintLayout>