<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendaEvent">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_agenda_2"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:background="@drawable/kotak_agenda_1"
        android:padding="8dp"
        android:text="Agenda"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_judul_3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:text="Rapat Konsep 2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_agenda_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_agenda_2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_deskripsi_3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:text="Membahas lebih detail setiap acara olahraga, mengkaji teknis pelaksanaan, serta mengeval..."
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_judul_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_waktu_3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/kotak_agenda_2"
        android:padding="8dp"
        android:text="23 Oktober 2023"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_deskripsi_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_3" />

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/blue"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_waktu_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_waktu_3" />


    <View
        android:layout_width="415dp"
        android:layout_height="109dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tambah"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>