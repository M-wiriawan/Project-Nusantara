<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendaEvent">


    <TextView
        android:id="@+id/tv_pom"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="1dp"
        android:text="Belanja Sewa"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_Uraian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Uraian"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pom" />

    <EditText
        android:id="@+id/et_uraian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Sewa Kamera"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_Uraian" />

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Volume"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_uraian" />

    <EditText
        android:id="@+id/et_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="2"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_volume" />

    <TextView
        android:id="@+id/tv_rincian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Rincian"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_volume" />

    <EditText
        android:id="@+id/et_rincian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="buah"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_rincian" />

    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Harga Satuan"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_rincian" />

    <EditText
        android:id="@+id/et_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Rp. 150.000"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_harga" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/btn_blue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Tambah Data"
        android:textSize="14sp"
        android:padding="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/et_harga"
        app:layout_constraintTop_toBottomOf="@+id/et_harga"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_bahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Belanja Sewa"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tambah" />

    <TextView
        android:id="@+id/tv_lihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Tambah Data"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tambah" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayoutContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bahan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:background="@color/blue">
                <TextView
                    android:text="No"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Uraian"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="V"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="S"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Jumlah"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Sub Total"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="start"
                    android:layout_span="4"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sewa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Belanja Sewa"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayoutContainer" />

    <TextView
        android:id="@+id/tv_lihat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Tambah Data"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayoutContainer" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayoutContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sewa"
        android:padding="4dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:background="@color/blue">
                <TextView
                    android:text="No"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Uraian"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="V"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="S"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Jumlah"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>