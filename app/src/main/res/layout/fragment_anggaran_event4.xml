<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendaEvent">


    <TextView
        android:id="@+id/tv_pom"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="1dp"
        android:text="Tambah Section"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_anggaran1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Anggaran"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pom" />

    <TextView
        android:id="@+id/tv_lihat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Lihat Detail"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pom" />

    <RelativeLayout
        android:id="@+id/tableLayoutContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_anggaran1"
        android:padding="4dp">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:background="@color/blue">
                <TextView
                    android:text="No"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Section"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Sub total"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </TableRow>

            <!-- Data -->
            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:text="1"
                    android:padding="10dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="253dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Belanja Bahan" />
                <TextView
                    android:text="Rp. 7.050.000"
                    android:padding="10dp"
                    android:gravity="end"/>
            </TableRow>


            <!-- Grand Total -->
            <TableRow
                android:layout_height="wrap_content">
                <TextView
                    android:text="Sub Total"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="start"
                    android:layout_span="2"/>
                <TextView
                    android:text="Rp. 7.050.000"
                    android:padding="10dp"
                    android:gravity="end"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Tambah Section Baru"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayoutContainer1" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Belanja Sewa"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/btn_blue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Tambah Data"
        android:textSize="14sp"
        android:padding="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/et_nama"
        app:layout_constraintTop_toBottomOf="@+id/et_nama"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_bahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Belanja Bahan"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tambah" />

    <TextView
        android:id="@+id/tv_lihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Lihat Detail"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_tambah" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayoutContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bahan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:background="@color/blue">
                <TextView
                    android:text="No"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Uraian"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="V"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="S"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:text="Jumlah"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </TableRow>

            <!-- Tabel Heading -->
            <TableRow>
                <TextView
                    android:text="1"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Kertas HVS"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="10 Lembar"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Rp. 1.000"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Rp. 10.000"
                    android:padding="10dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="2"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Bolpoin"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="1 Pack"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Rp. 38.000"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Rp. 38.000"
                    android:padding="10dp"
                    android:gravity="center"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="3"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Amplop"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="1 Pack"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Rp. 25.000"
                    android:padding="10dp"
                    android:gravity="center"/>
                <TextView
                    android:text="Rp. 25.000"
                    android:padding="10dp"
                    android:gravity="center"/>
            </TableRow>


            <!-- Grand Total -->
            <TableRow>
                <TextView
                    android:text="Sub Total"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="start"
                    android:layout_span="4"/>
                <TextView
                    android:text="Rp. 7.050.000"
                    android:padding="10dp"
                    android:gravity="end"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>