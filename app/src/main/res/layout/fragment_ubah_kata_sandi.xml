<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UbahKataSandi">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_ubhkatasandi"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="3dp"
        android:paddingTop="3dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="192dp"
        android:text="@string/ubhsandi"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_back"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_sandilama"
        android:layout_width="153dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:text="@string/sandilama"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/img_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_ubhkatasandi" />

    <EditText
        android:id="@+id/edt_sandilama"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:paddingStart="8dp"
        android:background="@drawable/custom_edit_text"
        android:hint="@string/lamasandi"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_sandilama"
        app:layout_constraintTop_toBottomOf="@+id/tv_sandilama"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_lupasandi"
        android:layout_width="163dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:text="@string/lupasandi"
        app:layout_constraintStart_toStartOf="@+id/edt_sandilama"
        app:layout_constraintTop_toBottomOf="@+id/edt_sandilama" />

    <TextView
        android:id="@+id/tv_admin"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/admin"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_lupasandi"
        app:layout_constraintTop_toBottomOf="@+id/edt_sandilama" />

    <TextView
        android:id="@+id/tv_sandibaru"
        android:layout_width="123dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/sandibaru"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_lupasandi"
        app:layout_constraintTop_toBottomOf="@+id/tv_lupasandi" />

    <EditText
        android:id="@+id/edt_sandibaru"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:paddingStart="8dp"
        android:background="@drawable/custom_edit_text"
        android:hint="@string/barusandi"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edt_barusandi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_ulangsandi"
        app:layout_constraintTop_toBottomOf="@+id/tv_ulangsandi" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simpan"
        android:layout_width="287dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_blue"
        android:backgroundTint="@color/blue"
        android:text="Ubah Kata Sandi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edt_sandibaru"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_sandibaru"
        app:layout_constraintTop_toBottomOf="@+id/edt_sandibaru" />

    <TextView
        android:id="@+id/tv_ulangsandi"
        android:layout_width="187dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/ulang"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_barusandi"
        app:layout_constraintTop_toBottomOf="@+id/edt_barusandi" />

    <EditText
        android:id="@+id/edt_barusandi"
        android:layout_width="288dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:paddingStart="8dp"
        android:background="@drawable/custom_edit_text"
        android:hint="@string/barusandi"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/edt_sandilama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_sandibaru"
        app:layout_constraintTop_toBottomOf="@+id/tv_sandibaru" />

</androidx.constraintlayout.widget.ConstraintLayout>