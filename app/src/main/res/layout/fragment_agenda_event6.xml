<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendaEvent6">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_agenda_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/kotak_agenda_1"
        android:padding="8dp"
        android:text="Agenda"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_judul_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:text="Rapat Konsep Final"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_agenda_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_agenda_4" />

    <TextView
        android:id="@+id/tv_deskripsi_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:text="Meninjau konsep akhir Pekan Olahraga Mahasiswa. Seluruh aspek acara akan dievaluasi, dan ..."
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_judul_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_4" />

    <TextView
        android:id="@+id/tv_waktu_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kotak_agenda_2"
        android:padding="8dp"
        android:text="26 Oktober 2023"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_deskripsi_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_4" />

    <View
        android:layout_width="416dp"
        android:layout_height="101dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_waktu_4"
        tools:layout_editor_absoluteX="-4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>