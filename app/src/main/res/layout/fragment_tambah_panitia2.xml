<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahPanitia2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_divisi"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:text="Tambah Divisi"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/img_back"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_namadivisi"
        android:layout_width="96dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="25dp"
        android:text="Nama Divisi"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_divisi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <EditText
        android:id="@+id/edt_namadivisi"
        android:layout_width="334dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_namadivisi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <TextView
        android:id="@+id/tv_anggota"
        android:layout_width="135dp"
        android:layout_height="23dp"
        android:text="Jumlah Anggota"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edt_namadivisi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="38dp" />

    <EditText
        android:id="@+id/edt_anggota"
        android:layout_width="334dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_namadivisi"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_divisi"
        android:layout_width="251dp"
        android:layout_height="44dp"
        android:layout_marginTop="376dp"
        android:text="Tambah Divisi"
        android:background="@drawable/btn_blue"
        android:backgroundTint="@color/blue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/edt_anggota"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>